<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviecollection">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/clapperboard"
        android:label="@string/app_name"
        android:roundIcon="@drawable/clapperboard"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCollection"
        tools:targetApi="31">
        <activity
            android:name=".MovieSearchActivity"
            android:exported="false" />
        <activity
            android:name=".RecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".WatchedMoviesActivity"
            android:exported="false" />
        <activity
            android:name=".MovieListActivity"
            android:exported="false" />
        <activity
            android:name=".views.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
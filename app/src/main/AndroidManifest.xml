<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviecollection">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/clapperboard"
        android:label="@string/app_name"
        android:roundIcon="@drawable/clapperboard"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCollection"
        tools:targetApi="31">
        <activity
            android:name=".views.SnacksActivity"
            android:exported="false" />
        <activity
            android:name=".views.MovieSearchActivity"
            android:exported="false" />
        <activity
            android:name=".views.RecommendationsActivity"
            android:exported="false" />
        <activity
            android:name=".views.FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".views.WatchedMoviesActivity"
            android:exported="false" />
        <activity
            android:name=".views.MovieListActivity"
            android:exported="false" />
        <activity
            android:name=".views.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>